<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecuperarContra">

    <LinearLayout
        android:id="@+id/DatosPersonalesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10sp"
            android:text="Ingresa tu correo electrónico,teléfono y te enviaremos un enlace para que recuperes el acceso a tu cuenta."
            android:textColor="#007bff"
            android:textSize="20sp" />

    <EditText
        android:id="@+id/Usertxt"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/edittext_login"
        android:drawableLeft="@drawable/ic_names"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Correo electrónico o Teléfono"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHighlight="#2271b3"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/black"
        android:textSize="15sp" />

        <Button
            android:id="@+id/Recuperarcuentabtn"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/button_redondo"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/salirrecuperabtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@null"
            android:text="Salir"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>