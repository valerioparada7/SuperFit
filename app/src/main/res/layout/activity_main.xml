<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/superfly"
    tools:context=".MainActivity">
    <!--android:background="#202732"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#74000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="vertical"
            android:verticalScrollbarPosition="defaultPosition">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:fontFamily="@font/playfairdisplayregular"
                android:text="Superfit"
                android:textColor="#0A497B"
                android:textSize="60sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Usuariotxt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:drawableLeft="@drawable/ic_usuario"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/playfairdisplayregular"
                android:hint="Correo electrónico o número celular"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Contraseñatxt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:drawableLeft="@drawable/ic_contra"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/playfairdisplayregular"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/Loginbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_redondo"
                android:text="Iniciar sesión"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Registrarsebtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_redondoborder"
                android:text="Registrarse"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>