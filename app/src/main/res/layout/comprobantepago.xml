<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Labelactualizafoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            android:background="@null"
            android:text="Pago Mensualidad"
            android:textColor="#007bff"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ImagenPagomodal"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"/>

        <EditText
            android:id="@+id/MontoTxt"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/edittext_login"
            android:drawableLeft="@drawable/ic_money"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Monto pagado"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHighlight="#2271b3"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@color/black"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/DescricionTxt"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/edittext_login"
            android:drawableLeft="@drawable/ic_bitacora"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Descripcion o motivo"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHighlight="#2271b3"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/AceptarpagoBtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="30sp"
            android:background="@null"
            android:text="Aceptar"
            android:textColor="#007bff"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/Cancelarpagobtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_height="30sp"
            android:background="@null"
            android:text="Cancelar"
            android:textColor="#FF0000"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>