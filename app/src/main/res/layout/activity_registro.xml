<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202732"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Datos personales"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

            <EditText
                android:id="@+id/NombreTxt"
                android:hint="Nombre(s)"
                android:drawableLeft="@drawable/ic_names"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawablePadding="12dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ApellidoPTxt"
                android:hint="Primer apellido"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_names"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"/>
            <EditText
                android:id="@+id/ApellidoMTxt"
                android:hint="Segundo Apellido"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_names"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"  />

            <EditText
                android:id="@+id/ApodoTxt"
                android:hint="Apodo"
                android:maxLength="30"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_names"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"/>

            <EditText
                android:id="@+id/EdadTxt"
                android:hint="Edad"
                android:inputType="number"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_edad"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp" />

            <EditText
                android:id="@+id/TelefonoTxt"
                android:hint="Número celular"
                android:inputType="phone"
                android:maxLength="10"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_celular"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"  />



            <EditText
                android:id="@+id/EmailTxt"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"/>


            <TextView
                android:id="@+id/textView10"
                android:text="Sexo"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_female"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"/>

        <Spinner
            android:id="@+id/SexoList"
            android:drawablePadding="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittext_login"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/white"
            android:textColorLink="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_marginTop="20sp"
            android:drawableRight="@drawable/ic_spinner_sex"/>

            <EditText
                android:id="@+id/Contratxt"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="30"
                android:drawablePadding="12dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/edittext_login"
                android:ems="10"
                android:textColor="@color/white"
                android:textColorHighlight="@color/black"
                android:textColorHint="@color/white"
                android:textColorLink="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:layout_marginTop="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/RegistrerseBtn2"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Registro" />
    </LinearLayout>

</LinearLayout>