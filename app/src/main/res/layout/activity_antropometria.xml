                        android:background="@drawable/edittext_login"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="Pantorrilla izquierda (Cm)"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:paddingLeft="20sp"
