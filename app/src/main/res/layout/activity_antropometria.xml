<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Antropometria">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Medidas Antropometria"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10dp"
                    android:text="Con la ayuda de una sinta mÃ©trica mediras lo siguiente"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/white"
                    android:textColorLink="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/PesoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_login"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="Peso (Kg)"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:paddingLeft="20sp"
                        android:paddingRight="5sp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColorLink="@color/black"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/AlturaTxt"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_login"
                        android:drawablePadding="12dp"
                        android:ems="10"
                        android:hint="Altura (Cm)"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingLeft="20sp"
                        android:paddingRight="5sp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:textColorLink="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/labelimc"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10dp"
                        android:hint="IMC"
                        android:paddingLeft="20sp"
                        android:paddingRight="5sp"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/black"
                        android:textColorHint="@color/white"
                        android:textColorLink="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/imcTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="IMC"
                        android:textColor="@color/white"
                        android:textSize="1sp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/BrazoderechorelajadoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
